# Environment Configuration
NODE_ENV=development
PORT=8080

# SuperTokens Configuration
SUPERTOKENS_CONNECTION_URI=https://try.supertokens.com
SUPERTOKENS_API_KEY=

# CORS Configuration
# Note: Network IPs are automatically detected and added by index.js
# Add any additional static origins here if needed
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# App Configuration
APP_NAME=SuperTokens Node Backend
APP_WEBSITE_URL=http://localhost:3000
# API_DOMAIN is automatically set by index.js based on current network IP
API_BASE_PATH=/api

# Timeout Configuration
REQUEST_TIMEOUT=60000
SERVER_TIMEOUT=60000
KEEP_ALIVE_TIMEOUT=120000

# Passwordless Configuration
PASSWORDLESS_FLOW_TYPE=USER_INPUT_CODE_AND_MAGIC_LINK
PASSWORDLESS_CONTACT_METHOD=EMAIL
# Optional: Custom email service settings (for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
